<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/tv_text1"
        android:textSize="25dp"
        android:fontFamily="serif"
        />

    <EditText
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:id="@+id/et_edittext1"
        android:inputType="text"
        />

    <TextView
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:id="@+id/tv_text2"
        android:layout_below="@id/et_edittext1"


        />
    <EditText
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/et_edittext2"
        android:layout_below="@id/tv_text2"

        />


    <TextView
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password: "
        android:id="@+id/tv_text3"
        android:layout_below="@id/et_edittext2"


        />
    <EditText
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/et_edittext3"
        android:layout_below="@id/tv_text3"

        />

    <TextView
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date of Birth: "
        android:id="@+id/tv_text4"
        android:layout_below="@id/et_edittext3"


        />
    <EditText
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/et_edittext4"
        android:layout_below="@id/tv_text4"

        />

    <TextView
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:id="@+id/tv_text5"
        android:layout_below="@id/et_edittext4"


        />
    <EditText
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/et_edittext5"
        android:layout_below="@id/tv_text5"

        />

    <TextView
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Country: "
        android:id="@+id/tv_text6"
        android:layout_below="@id/et_edittext5"


        />
    <EditText
        android:textSize="25dp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/et_edittext6"
        android:layout_below="@id/tv_text6"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_1"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"

        />

</RelativeLayout>